SLSTATS:
LOCAL TOTQTY,TOTPRICE,TOTUNKN
LOCAL I%
I%=POS
PRINT "COUNTING..."
FIRST
WHILE NOT EOF
 TOTQTY=TOTQTY+B.QTY
 IF B.PRICE>=0
  TOTPRICE=TOTPRICE+B.PRICE*B.QTY
 ELSE
  TOTUNKN=TOTUNKN+1
 ENDIF
 NEXT
ENDWH
CLS
AT 1,1 :PRINT "ITEMS ";NUM$(COUNT,2)
AT 10,1 :PRINT "QTY ";NUM$(TOTQTY,3)
AT 1,2 :PRINT "TOTAL ";CHR$(0);FIX$(TOTPRICE,2,6)
AT 15,2
IF TOTUNKN>9
 PRINT "+";CHR$(63);
ELSEIF TOTUNKN>0
 PRINT TOTUNKN;CHR$(63);
ENDIF
GET
POSITION I%
